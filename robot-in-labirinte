#include <Servo.h>
#include <NewPing.h>
#define ENA 3
#define IN1 8  
#define IN2 7 
#define IN3 12 
#define IN4 13
#define ENB 11
#define ECHO_PIN 4
#define TRIGGER_PIN 2
#define MAX_DISTANCE 400
NewPing sonar(TRIGGER_PIN, ECHO_PIN, MAX_DISTANCE);  
Servo Vertical;
Servo Gorizontal;
 
void setup()
{ 
  Gorizontal.write(100);
  Vertical.write(17);
  Serial.begin(9600);
  pinMode(ENA, OUTPUT);
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(IN3, OUTPUT);
  pinMode(IN4, OUTPUT);
  pinMode(ENB, OUTPUT);
  pinMode(ECHO_PIN, OUTPUT);
  pinMode(TRIGGER_PIN, OUTPUT);
 Vertical.attach(9);
 Gorizontal.attach(10);   
}




void loop()
{
 delay(200);
 Serial.print("Ping: ");
  Serial.print(sonar.ping_cm());
  Serial.println("cm");
   
  
  analogWrite(ENA , 255);
 analogWrite(ENB , 255);

 
 digitalWrite(IN4, HIGH); 
 digitalWrite(IN3, LOW);
 digitalWrite(IN2, LOW);
 digitalWrite(IN1, HIGH);



 
}
